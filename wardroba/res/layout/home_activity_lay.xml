<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<ImageView 
	    android:id="@+id/imgProductIcon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/login_logo"
	    android:layout_gravity="center_horizontal"
	    android:layout_margin="5dp"/>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp"
	    android:weightSum="1.0">
	    <TextView 
	        android:id="@+id/btnLike"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/like"
	        android:text="13 like"
	        android:textColor="@color/textcolor"
	        android:paddingLeft="5dp"
	        android:textStyle="bold"
	        android:layout_marginLeft="5dp"
	        android:drawablePadding="5dp"
	        android:layout_weight="0.4"/>
	    <TextView 
	        android:id="@+id/btnView"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/view"
	        android:layout_weight="0.35"
	        android:text="23"
	        android:textStyle="bold"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/textcolor"
	        android:paddingLeft="5dp"
	        android:drawablePadding="5dp"/>
	    <TextView 
	        android:id="@+id/btnComment"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:drawableLeft="@drawable/comment"
	        android:layout_weight="0.25"
	        android:layout_marginLeft="5dp"
	        android:text="3"
	        android:textStyle="bold"
	        android:textColor="@color/textcolor"
	        android:paddingLeft="5dp"
	        android:drawablePadding="5dp"/>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="10dp"
	    >
	    <TextView 
	        android:id="@+id/txtProductDesc"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="topwear topshirt navy blue flower summer A&amp;F store cotton"
	        android:textColor="@color/textcolor"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        />
	    <TextView 
	        android:id="@+id/txtProductPrice"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="39.99 euro"
	        android:textColor="@color/textcolor"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        />
	</LinearLayout>
</LinearLayout>
